<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:srlEnablePureScrollMode="true"
    app:srlEnableLoadmore="false"
    app:srlDragRate="0.2"
    android:background="@color/color_E75B5B">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/color_f6f6f6">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E75B5B"
        android:paddingTop="@dimen/padding_top">
        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/icon_white_empty_message"/>
        <com.smart.smartchart.widget.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:src="@drawable/img_default_head"
            app:border_color="#a2ffffff"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:paddingBottom="16dp"
            android:text="张三"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_company"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/page_margin"
            android:text="公司"
            android:textColor="@color/color_646464"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_646464"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/divider_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_branck_company"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/page_margin"
            android:text="公司"
            android:textColor="@color/color_646464"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_branch_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_646464"
            android:textSize="15sp" />
    </RelativeLayout>



</LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
